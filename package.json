{
	"name": "express-typescript-boilerplate",
	"version": "1.0.14",
	"description": "An Express boilerplate backend",
	"author": "Edwin Hernandez",
	"repository": "edwinhern/express-typescript-2024",
	"license": "MIT",
	"main": "index.ts",
	"private": true,
	"scripts": {
		"build": "tsup",
		"start:dev": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
		"start:prod": "node dist/index.js",
		"lint": "biome lint",
		"lint:fix": "biome lint --fix",
		"format": "biome format --write",
		"test": "jest",
		"test:cov": "vitest run --coverage",
		"check": "pnpm lint && pnpm format && pnpm build && pnpm test",
		"postinstall": "prisma generate"
	},
	"dependencies": {
		"@asteasolutions/zod-to-openapi": "7.3.0",
		"@jest/globals": "^29.7.0",
		"@prisma/adapter-pg": "^6.5.0",
		"@prisma/client": "^6.5.0",
		"@types/bcrypt": "^5.0.2",
		"@types/pg": "^8.11.11",
		"@types/supertest": "^2.0.12",
		"bcryptjs": "^3.0.2",
		"body-parser": "^1.20.3",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"cors": "2.8.5",
		"dotenv": "16.4.7",
		"envalid": "8.0.0",
		"express": "4.21.2",
		"express-rate-limit": "7.5.0",
		"helmet": "8.1.0",
		"http-status-codes": "2.3.0",
		"inversify": "7.0.0-alpha.5",
		"jest": "^29.5.0",
		"jsonwebtoken": "^9.0.2",
		"multer": "1.4.5-lts.2",
		"pg": "^8.14.1",
		"pino": "9.6.0",
		"pino-http": "10.4.0",
		"reflect-metadata": "^0.2.2",
		"routing-controllers": "^0.11.2",
		"supertest": "^6.3.3",
		"swagger-ui-express": "5.0.1",
		"ts-jest": "^29.1.0",
		"ts-node": "^10.9.2",
		"typedi": "^0.10.0",
		"zod": "3.24.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/body-parser": "^1.19.5",
		"@types/cors": "2.8.17",
		"@types/express": "5.0.1",
		"@types/jest": "^29.5.14",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/multer": "^1.4.12",
		"@types/supertest": "6.0.3",
		"@types/swagger-ui-express": "4.1.8",
		"pino-pretty": "13.0.0",
		"prisma": "^6.5.0",
		"supertest": "7.1.0",
		"tsup": "8.4.0",
		"tsx": "4.19.3",
		"typescript": "5.8.2",
		"vite-tsconfig-paths": "5.1.4"
	},
	"tsup": {
		"entry": [
			"src",
			"!src/**/__tests__/**",
			"!src/**/*.test.*"
		],
		"splitting": false,
		"sourcemap": true,
		"clean": true
	},
	"packageManager": "pnpm@10.6.5"
}
